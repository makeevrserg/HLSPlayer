<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/streamFragment"
        android:name="com.makeevrserg.hlsplayer.ui.stream.StreamFragment"
        android:label="StreamFragment"
        tools:layout="@layout/stream_fragment">
        <argument
            android:name="hlsUrl"
            app:argType="string"
            android:defaultValue="@null"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.makeevrserg.hlsplayer.ui.auth.AuthFragment"
        android:label="auth_fragment"
        tools:layout="@layout/auth_fragment" >
        <action
            android:id="@+id/action_authFragment_to_streamFragment"
            app:destination="@id/streamFragment" />
    </fragment>
</navigation>